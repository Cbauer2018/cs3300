<%= render 'projects/navbar' %>
<p id="notice"><%= notice %></p>
<br><br><br>
<h3 style="text-align:center;"><%= @project.title %></h3>

<p style="text-align:center;">
  <%= @project.description %>
</p>

<div class="container">
	<div class="text-center">
  <% if user_signed_in? %>
      <%= link_to 'Edit', edit_project_path(@project) , class:"rounded btn-secondary", style:"color:white"%>
      <%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure?' } , class:"rounded btn-secondary", style:"color:white"%>
      <%end%>
      <%= link_to 'Back', projects_path,  class:"rounded btn-secondary", style:"color:white"%> 
	</div>
</div>